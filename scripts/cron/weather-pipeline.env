# Weather Pipeline Environment Variables
# Source this file in cron wrapper script
#
# Usage: source /home/ubuntu/weather-pipeline/WeatherData/scripts/cron/weather-pipeline.env

# AWS Configuration
export AWS_REGION="us-east-1"
export AWS_DEFAULT_REGION="us-east-1"

# S3 Configuration
export S3_BUCKET="sat-data-container"
export ENABLE_S3_UPLOAD="true"

# Pipeline Configuration
export ENABLE_TILES="true"
export PRIORITY="1"
export ZOOM_LEVELS="0-5"
export TILE_PROCESSES="4"

# Directories
export WORK_DIR="/tmp/weather-pipeline"
export LOG_DIR="/var/log/weather-pipeline"

# Project root - UPDATE THIS if your repo is in a different location
export PROJECT_ROOT="/home/ubuntu/weather-pipeline/WeatherData"

# Docker (ensure docker socket is accessible)
export DOCKER_HOST="unix:///var/run/docker.sock"
